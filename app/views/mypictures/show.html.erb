<div class="row">
	<%= render '/menu' %>
</div>

<div class="image-back background">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 box-center">
				<h1><%= @picture.name %></h1><br>
				<p align="center"><%= @picture.description %></p>
			</div>
		</div><br>
		<div class="row">
			<div class="col-lg-12">
				<% @picture.files.each do |file| %>
					<%= link_to url_for(file) do %>
						<div class="col-lg-3 col-md-3 col-sm-12 box-4">
							<div>
								<%= image_tag file %>
							</div>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>