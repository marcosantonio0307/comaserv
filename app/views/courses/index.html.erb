<div class="row">
	<%= render '/menu' %>
</div>

<div class="image-back accounting">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 box-center">
				<h1>CONHEÇA NOSSOS CURSOS</h1>
				<p align="center">A ComaServ Consultoria e Acessoria disponibiliza varios cursos de treinamento para o desenvolvimento e aprimoramento de pessoas e instituições!</p>
			</div>
		</div>
		<% @courses.each do |course| %>
			<div class="row">
				<%= link_to course_path(course) do %>
				<div class="col-lg-12 col-md-12 col-sm-12">
					<div class="courses">
						<h3><%= course.title %></h3>
					</div>
				</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>