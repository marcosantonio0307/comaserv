<div class="row">
	<%= render '/menu' %>
</div>

<div class="row image-back accounting">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<div class="box-center">
			<h1>Trabalhe Conosco!</h1>
		</div>
		<div class="form-box">
			<h4>Preencha o formul√°rio abaixo para futuras vagas em nossa equipe!</h4>
			<%= form_tag new_form_path, method: :get do %>
				<p style="visibility: hidden;"><%= text_field_tag :category, 'resume' %></p>
				<div class="form-group">
					<%= label_tag :nome %>
					<%= text_field_tag :name, nil, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= label_tag :email %>
					<%= email_field_tag :email, nil, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= label_tag :telefone %>
					<%= text_field_tag :phone, nil, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= label_tag :objetivo %>
					<%= text_area_tag :description, nil, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= label_tag :curriculum %>
					<%= file_field_tag :curriculum %>
				</div>
				<div class="form-group">
					<%= button_to :enviar, nil, class: 'btn-blue' %>
				</div>
			<% end %>
		</div>
	</div>
</div>