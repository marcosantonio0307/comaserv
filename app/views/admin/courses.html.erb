<%= render 'logobar' %>

<div class="row">
	<div class="container">
		<div class="col-lg-12 col-md-12 col-sm-12">
			<p style="margin-bottom: 1em; text-align: right;"><%= link_to 'Novo Curso', new_course_path, class: 'btn btn-primary' %></p>
			<table class="table table-bordered">
				<thead>
					<th>Curso</th>
					<th>Data de Criação</th>
				</thead>
				<tbody>
					<% @courses.each do |course| %>
					<tr>
						<td><%= course.title %></td>	
						<td><%= date_br(course.created_at) %></td>
						<td><%= link_to 'exibir', course_path(course), class: 'btn btn-primary' %></td>
						<td><%= link_to 'editar', edit_course_path(course), class: 'btn btn-warning' %></td>
						<td><%= link_to 'excluir', course_path(course), method: :delete, class: 'btn btn-danger', data:{confirm: 'Deseja Excluir Esse Curso?'} %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div> 
</div>