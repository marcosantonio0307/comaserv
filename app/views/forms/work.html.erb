<div class="row">
	<%= render '/menu' %>
</div>

<div class="row image-back accounting">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<div class="box-center">
			<h1>Trabalhe Conosco!</h1>
		</div>
		<div class="form-box">
			<h4>Preencha o formul√°rio abaixo para futuras vagas em nossa equipe!</h4>
			<%= form_for @form do |f| %>
				<p style="visibility: hidden;"><%= text_field_tag :category, 'resume' %></p>
				<div class="form-group">
					<%= f.label :nome %>
					<%= f.text_field :name, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :email %>
					<%= f.email_field :email, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :telefone %>
					<%= f.text_field :phone, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :objetivo %>
					<%= f.text_area :description, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :curriculum %>
					<%= f.file_field :files, multiple: true %>
				</div>
				<div class="form-group">
					<%= f.submit :enviar, class: 'btn-blue' %>
				</div>
			<% end %>
		</div>
	</div>
</div>