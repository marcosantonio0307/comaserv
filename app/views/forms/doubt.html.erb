<div class="row">
	<%= render '/menu' %>
</div>

<div class="row image-back financial">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<div class="box-center">
			<h1>Duvidas? Esclareceremos todas pra você!</h1>
		</div>
		<div class="form-box">
			<h4>Preencha o formulário abaixo com os dados necessários e entraremos em contato com você!</h4>
			<%= form_for @form do |f| %>
				<p style="visibility: hidden;"><%= text_field_tag :category, 'doubt' %></p>
				<div class="form-group">
					<%= f.label :nome %>
					<%= f.text_field :name, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :email %>
					<%= f.email_field :email, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :telefone %>
					<%= f.text_field :phone, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :empresa %>
					<%= f.text_field :company, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :duvida %>
					<%= f.text_area :description, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.submit :enviar, class: 'btn-blue' %>
				</div>
			<% end %>
		</div>
	</div>
</div>